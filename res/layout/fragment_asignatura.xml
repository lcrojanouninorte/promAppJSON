<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bgrepeat"
    android:orientation="vertical"
    android:padding="5dp" >
        
    <TextView
        android:id="@+id/textViewTitleEditAsig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/text_nombre_asignatura"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

     <LinearLayout 
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal" 
   		android:layout_gravity="center"
   		android:layout_marginBottom="5dp"
   		>

         <TextView
             android:id="@+id/textViewNotaEsperada"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.1"
              android:baselineAligned="false"
             android:text="Nota Requerida Semmestre"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textSize="12sp" />

         <EditText
             android:id="@+id/editTextChangeRequerido"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.2"
             android:ems="5"
             android:inputType="numberDecimal"
             android:maxHeight="10dp"
             android:minHeight="10dp"
             android:textSize="12sp" >

             <requestFocus />
         </EditText>
	    
	     <Button
	         android:id="@+id/buttonSimuladorSemestral"
	         style="?android:attr/buttonStyleSmall"
	         android:layout_width="0dp"
	         android:layout_height="wrap_content"
	         android:layout_weight="0.2"
	         android:minHeight="20dp"
	         android:minWidth="20dp"
	         android:text="Calcular"
	         android:textSize="12sp" />

	 </LinearLayout>

	 <LinearLayout 
           android:layout_width="match_parent"
           android:baselineAligned="false"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="0.2"
             android:layout_height="fill_parent"
             android:gravity="center"
             android:orientation="vertical">

		     <TextView
		         android:id="@+id/textViewLabelNotaReq"
		         android:layout_width="wrap_content"
		         android:layout_height="0dp"
		         android:layout_weight="0.6"
		         android:gravity="center"
		         android:text="Nota Requerida en el Semestre"
		         android:textSize="12sp" />

		     <TextView
		           android:id="@+id/textViewNotaRequerida"
		           android:layout_width="wrap_content"
		           android:layout_height="0dp"
		           android:layout_weight="0.4"
		           android:text="@string/number" />
	     </LinearLayout>
	     <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="0.2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:layout_gravity="center"
             android:orientation="vertical">

		     <TextView
		         android:id="@+id/textViewLabelpromSim"
		         android:layout_width="wrap_content"
		         android:layout_height="0dp"
		         android:layout_weight="0.6"
		         android:gravity="center"
		         android:text="@string/text_nota_simulada"
		         android:textSize="12sp" />

		     <TextView
		           android:id="@+id/textViewNotaSimulada"
		           android:layout_width="wrap_content"
		           android:layout_height="0dp"
		           android:layout_weight="0.4"
		           android:text="@string/number" />
	     </LinearLayout>
	     

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" 
        android:gravity="center">

        <TextView
            android:id="@+id/textViewPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_porcentaje_ingresado"
            android:textSize="14sp" />

    </LinearLayout>
    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Evaluaciones"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    <LinearLayout
         android:id="@+id/row1"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:orientation="vertical"
         android:gravity="center" 
         android:layout_weight="0.75"
        >

        
        
    </LinearLayout>

<ToggleButton
    android:id="@+id/toggleButtonFinalizarAsignatura"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minHeight="40dp"
    android:text=""
    android:textOff="Finalizar Asignatura"
    android:textOn="Continuar Asignatura"
    android:textSize="16sp" />

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         android:layout_gravity="center" >

          <Button
              android:id="@+id/buttonAddNewEval"
              android:layout_width="0dp"
              android:layout_height="fill_parent"
              android:layout_gravity="center|bottom"
              android:layout_weight="0.4"
              android:minHeight="25dp"
              android:minWidth="25dp"
              android:text="@string/text_nueva_evaluacion"
              android:textSize="12sp" />
         
     </LinearLayout>
   
</LinearLayout>
